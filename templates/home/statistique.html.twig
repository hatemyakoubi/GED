{% extends "admin/bars.html.twig" %}

{% block contenpage %}



<div class="row">

    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Listes des contrats
                </h2>

                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <div class="row">
                    <!-- top tiles -->
                    <div class="row" style="display: inline-block;">
                        <div class="tile_count">
                            <div class="col-md-2 col-sm-4  tile_stats_count">
                                <span class="count_top"><i class="fa fa-user"></i> Total Users</span>
                                <div class="count">{{users|length}}</div>
                            </div>
                            <div class="col-md-2 col-sm-4  tile_stats_count">
                                <span class="count_top"><i class="fa fa-clock-o"></i> Total Contrat</span>
                                <div class="count">{{contrats|length}}</div>
                                  
                            </div>
                            <div class="col-md-2 col-sm-4  tile_stats_count">
                                <span class="count_top"><i class="fa fa-user"></i> Total Recettes</span>
                                <div class="count">{{recettes|length}}</div>
                               
                            </div>
                            <div class="col-md-2 col-sm-4  tile_stats_count">
                                <span class="count_top"><i class="fa fa-user"></i> Total Females</span>
                                <div class="count">4,567</div>
                                <span class="count_bottom"><i class="red"><i class="fa fa-sort-desc"></i>12% </i> From
                                    last Week</span>
                            </div>
                            <div class="col-md-2 col-sm-4  tile_stats_count">
                                <span class="count_top"><i class="fa fa-user"></i> Total Collections</span>
                                <div class="count">2,315</div>
                                <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From
                                    last Week</span>
                            </div>
                            <div class="col-md-2 col-sm-4  tile_stats_count">
                                <span class="count_top"><i class="fa fa-user"></i> Total Connections</span>
                                <div class="count">7,325</div>
                                <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From
                                    last Week</span>
                            </div>
                        </div>

                    </div>

                 
                </div>
                <form method="post">
                    {{form_start(form)}}
                     {{form_widget(form)}}
                    {{form_end(form)}}
                </form>
                {% if resultats %}
                                <table id="example" class="display table table-striped table-bordered dataminetables">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Code Centre</th>
                        <th>Code Recette</th>
                        <th>Type resultat</th>
                        <th>Type d'operation</th>
                        <th>Reference</th>
                        <th>Date contrat</th>
                        <th>Date Modification</th>
                        <th>Date Sauvegarde</th>
                        <th>Redacteur</th>
                        <th>Montant</th>
                        <th>AdresseEmp</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for resultat in resultats %}
                    <tr>
                        <td>{{ resultat.id }}</td>
                        <td>{{ resultat.codeCentre }}</td>
                        <td>{{ resultat.codeRecette }}</td>
                        <td>{{ resultat.typeContrat }}</td>
                        <td>{{ resultat.typeOperation }}</td>
                        <td>{{ resultat.reference }}</td>
                        <td>{{ resultat.dateContrat ? resultat.dateContrat|date('Y-m-d') : '' }}</td>
                        <td>{{ resultat.dateModification ? resultat.dateModification|date('Y-m-d') : '' }}
                        </td>
                        <td>{{ resultat.dateSauvegarde ? resultat.dateSauvegarde|date('Y-m-d') : '' }}</td>
                        <td>{{ resultat.redacteur }}</td>
                        <td>{{ resultat.montant }}</td>
                        <td>{{ resultat.adresseEmp }}</td>
                        <td>
                            <a href="{{ path('app_contrat_show', {'id': resultat.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('app_contrat_edit', {'id': resultat.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="13">no records found</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

                {% endif %}
            </div>
        </div>
    </div>
</div>
</div>



{% endblock %}