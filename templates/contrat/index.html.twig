{% extends "admin/bars.html.twig" %}

{% block contenpage %}
<div class="">
    <div class="page-title">
        <div class="title_left">

        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Listes des contrats
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="{{path('app_contrat_new')}}" class="btn btn-success">Nouveau contrat</a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">

                        <table id="example" class="display table table-striped table-bordered dataminetables">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Code Centre</th>
                                    <th>Code Recette</th>
                                    <th>Type Contrat</th>
                                    <th>Type d'operation</th>
                                    <th>Reference</th>
                                    <th>Date Contrat</th>
                                    <th>Date Modification</th>
                                    <th>Date Sauvegarde</th>
                                    <th>Redacteur</th>
                                    <th>Montant</th>
                                    <th>AdresseEmp</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for contrat in contrats %}
                                <tr>
                                    <td>{{ contrat.id }}</td>
                                    <td>{{ contrat.codeCentre }}</td>
                                    <td>{{ contrat.codeRecette }}</td>
                                    <td>{{ contrat.typeContrat }}</td>
                                    <td>{{ contrat.typeOperation }}</td>
                                    <td>{{ contrat.reference }}</td>
                                    <td>{{ contrat.dateContrat ? contrat.dateContrat|date('Y-m-d') : '' }}</td>
                                    <td>{{ contrat.dateModification ? contrat.dateModification|date('Y-m-d') : '' }}
                                    </td>
                                    <td>{{ contrat.dateSauvegarde ? contrat.dateSauvegarde|date('Y-m-d') : '' }}</td>
                                    <td>{{ contrat.redacteur }}</td>
                                    <td>{{ contrat.montant }}</td>
                                    <td>{{ contrat.adresseEmp }}</td>
                                    <td>
                                        <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                                        <a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="13">no records found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}