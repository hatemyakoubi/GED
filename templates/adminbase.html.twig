<script>
    
    var select = document.getElementById("structure_type"); // La liste déroulante de choix
    var choix = Array.prototype.slice.call(document.getElementsByClassName("champs")); // nos éléments cachés

    function hide(champs) { // La fonction permettant de cacher tous nos éléments d'un coup
        champs.classList.add("hide"); // L'ajout de la classe permettant de dissimuler l'élément
    }

    function displayLanguage(event) { // La fonction qui permet de gérer la sélection d'un nouvel élément
        var selected_choix = event.target.value; // La valeur de notre liste déroulante
        var centre = document.getElementById("centre");
        if (selected_choix == "Recette") {
            console.log(selected_choix);
            centre.classList.remove("hide"); // On affiche seulement l'élément concerné
        }else{
            centre.classList.add("hide"); // On affiche seulement l'élément concerné
        }
      
    
    }

    select.addEventListener("change", displayLanguage); // On ajoute un écouteur d'événement à chaque changement
